<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg5"
    tools:context=".SeasonLessonActivity3">

    <Button
        android:id="@+id/button81"
        android:layout_width="100dp"
        android:layout_height="42dp"
        android:layout_marginBottom="256dp"
        android:fontFamily="@font/ranchers"
        android:text="Listen"
        android:textSize="14sp"
        app:backgroundTint="#9A7241"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="319dp"
        android:layout_height="106dp"
        android:layout_marginBottom="148dp"
        android:fontFamily="@font/chewy"
        android:text="Autumn starts when the day and night are the same length again. During autumn, the leaves change colour and fall from the trees. The people celebrate Halloween."
        android:textColor="#490606"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.347"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView101"
        android:layout_width="227dp"
        android:layout_height="146dp"
        android:layout_marginBottom="460dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/seasonslogo" />

    <Button
        android:id="@+id/button79"
        android:layout_width="86dp"
        android:layout_height="44dp"
        android:layout_marginBottom="60dp"
        android:fontFamily="@font/ranchers"
        android:onClick="openSeasonLessonActivity3"
        android:text="@string/next"
        app:backgroundTint="#181B55"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.904"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="OnClick" />

    <ImageView
        android:id="@+id/imageView99"
        android:layout_width="292dp"
        android:layout_height="171dp"
        android:layout_marginBottom="304dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/autumn" />

</androidx.constraintlayout.widget.ConstraintLayout>